{% extends 'base.html.twig' %}

{% block title %}Village Green{% endblock %}

{% block body %}

<div class=" mt-3 d-flex justify-content-around flex-wrap">

        {% for categorie in categorie %}


            <div class="col-6 col-lg-4 my-3 d-flex justify-content-center text-center">
                <div class="card col-5 pt-2 px-2">
                    <img src="{{ asset('/img/category/' ~ categorie . image )}}" class="card-img-top card-img" alt="Image de la carte">
                    <div class="card-body">
                        <h5 class="card-title text-center">{{ categorie . libelle }}</h5>
                        <a href="{{ path('app_platsC', {'categorie_id': categorie.id}) }}" class="btn btn-primary btn-mod">Voir les plats</a>
                    </div>
                </div>
            </div>

        {% endfor %}
 
    </div>

{% endblock %}
